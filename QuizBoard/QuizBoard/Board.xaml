<Page
    x:Class="QuizBoard.Board"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:QuizBoard"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Loaded="Page_Loaded">

    <StackPanel Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid Height="{Binding ActualWidth, Mode=OneWay, RelativeSource={RelativeSource Mode=Self}}" Name="g_board">
            <Ellipse Name="el_player" Width="25" Height="25" Fill="Blue"></Ellipse>
        </Grid>

        <StackPanel>

            <AppBarButton Icon="Like" HorizontalAlignment="Center" Click="b_move_Click" />

        </StackPanel>

    </StackPanel>
</Page>
